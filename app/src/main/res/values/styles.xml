<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="OnboardingEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/avenir_lightoblique</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/white50</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AddressInputEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/basket_quantity</item>
        <item name="android:background">@drawable/address_input_bg</item>
    </style>

</resources>
