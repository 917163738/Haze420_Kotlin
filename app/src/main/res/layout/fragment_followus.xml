<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bg"
        tools:context=".ui.main.followus.FollowusFragment">

    <TextView
            android:id="@+id/txtFollowus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/account_note_bg"
            android:paddingLeft="@dimen/_12sdp"
            android:text="@string/follow_us_text"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/avenir_medium"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
            android:id="@+id/imgFB"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@mipmap/facebook_square"
            app:layout_constraintTop_toBottomOf="@id/txtFollowus"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgTwitter"
            app:layout_constraintHorizontal_chainStyle="spread"
    />

        <ImageView
                android:id="@+id/imgTwitter"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@mipmap/twitter_square"
                app:layout_constraintTop_toTopOf="@id/imgFB"
                app:layout_constraintStart_toEndOf="@id/imgFB"
                app:layout_constraintEnd_toStartOf="@+id/imgInstagram"
        />

        <ImageView
                android:id="@+id/imgInstagram"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@mipmap/instagram"
                app:layout_constraintTop_toTopOf="@id/imgFB"
                app:layout_constraintStart_toEndOf="@id/imgTwitter"
                app:layout_constraintEnd_toEndOf="parent"
        />
    

</androidx.constraintlayout.widget.ConstraintLayout>