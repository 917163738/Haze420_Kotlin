<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="viewModel" type="com.haze420.android.ui.main.products.ProductDetailViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bg"
        tools:context=".ui.main.products.ProductDetailFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@{viewModel.productName}"
                    android:paddingStart="@dimen/_12sdp"
                    android:textColor="@android:color/white"
                    android:background="@color/account_note_bg"
                    android:textSize="@dimen/_18ssp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/avenir_medium"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ratingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintTop_toTopOf="parent"
                >
                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/CustomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:numStars="5"
                        android:rating="@{viewModel.getRating()}"
                        android:stepSize="0.01"
                        android:isIndicator="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/txtReviewCount"
                        app:layout_constraintVertical_chainStyle="packed"
                    />

                    <TextView
                        android:id="@+id/txtReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.getReviewCount()}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/avenir_blackoblique"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                        app:layout_constraintBottom_toBottomOf="parent"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/txtProductName"/>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    app:ci_width="8dp"
                    app:ci_height="3dp"
                    app:ci_drawable="@drawable/red_line"
                    app:ci_drawable_unselected="@drawable/grey_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewPager"
                />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/advantageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@color/referral_color"
                    app:layout_constraintTop_toBottomOf="@+id/indicator">
                    <ImageView
                        android:id="@+id/imgPackage"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@mipmap/cube_box_3_d_sqaure_volume"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        app:layout_constraintEnd_toStartOf="@+id/imgDelivery"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                    />
                    <ImageView
                        android:id="@+id/imgDelivery"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@mipmap/delivery_truck_shipment_logistic_transportation"
                        app:layout_constraintTop_toTopOf="@+id/imgPackage"
                        app:layout_constraintStart_toEndOf="@+id/imgPackage"
                        app:layout_constraintEnd_toStartOf="@+id/imgRewards"
                    />
                    <ImageView
                        android:id="@+id/imgRewards"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@mipmap/reward_tag_ribbon_premium_quality"
                        app:layout_constraintTop_toTopOf="@+id/imgPackage"
                        app:layout_constraintStart_toEndOf="@+id/imgDelivery"
                        android:layout_marginEnd="@dimen/_50sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_7sdp"
                        android:gravity="center_horizontal"
                        android:text="@string/str_discreet"
                        android:fontFamily="@font/avenir_light"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/imgPackage"
                        app:layout_constraintStart_toStartOf="@+id/imgPackage"
                        app:layout_constraintEnd_toEndOf="@+id/imgPackage"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_7sdp"
                        android:gravity="center_horizontal"
                        android:text="@string/str_express"
                        android:fontFamily="@font/avenir_light"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/imgPackage"
                        app:layout_constraintStart_toStartOf="@+id/imgDelivery"
                        app:layout_constraintEnd_toEndOf="@+id/imgDelivery"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_7sdp"
                        android:gravity="center_horizontal"
                        android:text="@string/str_earn"
                        android:fontFamily="@font/avenir_light"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/imgPackage"
                        app:layout_constraintStart_toStartOf="@+id/imgRewards"
                        app:layout_constraintEnd_toEndOf="@+id/imgRewards"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/weightLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintTop_toBottomOf="@+id/advantageLayout">
                <TextView
                    android:id="@+id/txtWeightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_weight"
                    android:paddingStart="@dimen/_12sdp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/avenir_heavy"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:id="@+id/llWeight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtWeightLabel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                >

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:id="@+id/line1"
                      android:background="@color/list_indicate_color"
                      app:layout_constraintTop_toBottomOf="@id/weightLayout"
                      android:layout_marginTop="@dimen/_5sdp"
                />
                <View android:layout_width="1dp" android:layout_height="1dp"
                      android:id="@+id/vert1"
                      android:background="@color/list_indicate_color"
                      app:layout_constraintTop_toBottomOf="@id/weightLayout"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                />
                <View
                    android:id="@+id/viewAddTo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/button_background"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="@id/vert1"
                    app:layout_constraintEnd_toEndOf="parent"
                />
                <ImageView
                    android:id="@+id/imgAddTo"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@mipmap/add"
                    app:layout_constraintTop_toTopOf="@+id/viewAddTo"
                    app:layout_constraintBottom_toBottomOf="@+id/viewAddTo"
                    app:layout_constraintStart_toStartOf="@+id/viewAddTo"
                    app:layout_constraintEnd_toStartOf="@+id/txtAddToBucket"
                    app:layout_constraintHorizontal_chainStyle="packed"
                />
                <TextView
                    android:id="@+id/txtAddToBucket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center"
                    android:text="@string/str_add_to_basket"
                    android:fontFamily="@font/avenir_medium"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/viewAddTo"
                    app:layout_constraintStart_toEndOf="@+id/imgAddTo"
                    app:layout_constraintBottom_toBottomOf="@+id/viewAddTo"
                    app:layout_constraintEnd_toEndOf="parent"
                />

                <TextView
                    android:id="@+id/txtOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.getGrayPrice()}"
                    android:fontFamily="@font/avenir_book"
                    android:textColor="@color/sales_price"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/viewAddTo"
                    app:layout_constraintBottom_toBottomOf="@+id/viewAddTo"
                    android:visibility="@{viewModel.shouldVisible}"
                />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/sales_price"
                    app:layout_constraintStart_toStartOf="@+id/txtOldPrice"
                    app:layout_constraintEnd_toEndOf="@+id/txtOldPrice"
                    app:layout_constraintTop_toTopOf="@+id/txtOldPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/txtOldPrice"
                    android:visibility="@{viewModel.shouldVisible}"
                />

                <TextView
                    android:id="@+id/txtRealPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_17sdp"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.getRealPrice()}"
                    android:fontFamily="@font/avenir_book"
                    android:textColor="@color/red"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@+id/txtOldPrice"
                    app:layout_constraintTop_toTopOf="@+id/viewAddTo"
                    app:layout_constraintBottom_toBottomOf="@+id/viewAddTo"
                />

                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:id="@+id/line2"
                      android:background="@color/list_indicate_color"
                      app:layout_constraintTop_toBottomOf="@id/viewAddTo"
                      android:layout_marginTop="1dp"
                />

                <TextView
                    android:id="@+id/txtTHCLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center_vertical"
                    android:text="@string/thc"
                    android:fontFamily="@font/avenir_heavy"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    android:layout_marginTop="@dimen/_6sdp"
                />

                <ImageView
                    android:id="@+id/imgTHC1"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:src="@drawable/red_line"
                    app:layout_constraintTop_toBottomOf="@+id/txtTHCLabel"
                    app:layout_constraintStart_toStartOf="@id/txtTHCLabel"
                    android:layout_marginTop="@dimen/_4sdp"
                />
                <ImageView
                    android:id="@+id/imgTHC2"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:src="@{viewModel.checkLevelImage(2) ? @drawable/red_line: @drawable/grey_line}"
                    app:layout_constraintStart_toEndOf="@id/imgTHC1"
                    app:layout_constraintTop_toTopOf="@+id/imgTHC1"
                />
                <ImageView
                    android:id="@+id/imgTHC3"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:src="@{viewModel.checkLevelImage(3) ? @drawable/red_line: @drawable/grey_line}"
                    app:layout_constraintStart_toEndOf="@id/imgTHC2"
                    app:layout_constraintTop_toTopOf="@+id/imgTHC1"
                />
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:id="@+id/line3"
                      android:background="@color/list_indicate_color"
                      app:layout_constraintTop_toBottomOf="@id/line2"
                      android:layout_marginTop="@dimen/_45sdp"
                />
                <TextView
                    android:id="@+id/txtContentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center_vertical"
                    android:text="@string/str_product_description"
                    android:fontFamily="@font/avenir_heavy"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line3"
                    android:layout_marginTop="@dimen/_4sdp"
                />
                <TextView
                    android:id="@+id/txtProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.getProductDescription()}"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenir_book"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintTop_toBottomOf="@+id/txtContentLabel"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </RelativeLayout>
</layout>