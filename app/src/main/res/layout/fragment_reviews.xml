<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="viewModel"
                  type="com.haze420.android.ui.main.orders.ReviewsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bg"
        tools:context=".ui.main.orders.ReviewsFragment">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@{viewModel.getProductName()}"
            android:paddingStart="@dimen/_12sdp"
            android:textColor="@android:color/white"
            android:background="@color/account_note_bg"
            android:textSize="@dimen/_18ssp"
            android:gravity="center_vertical"
            android:fontFamily="@font/avenir_medium"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtReviewsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_reviews"
            android:textColor="@color/red"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/avenir_medium"
            app:layout_constraintTop_toTopOf="@id/txtProductName"
            app:layout_constraintBottom_toBottomOf="@id/txtProductName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:background="@color/global_bg"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/txtProductName"
            app:layout_constraintBottom_toTopOf="@+id/leaveReviewLayout"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leaveReviewLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:visibility="visible"
        >
            <TextView
                android:id="@+id/txtLeaveLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_review"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.haze420.android.widget.main.CustomRatingBar
                android:id="@+id/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtLeaveLabel"
                app:layout_constraintBottom_toBottomOf="@+id/txtLeaveLabel"
                />
            <EditText
                android:id="@+id/edtComment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/grey_border_leave_reviewbg"
                android:ems="10"
                android:gravity="top|left"
                android:fontFamily="@font/avenir_book"
                android:hint="@string/str_comments"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/basket_quantity"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintTop_toBottomOf="@+id/txtLeaveLabel"
                app:layout_constraintBottom_toTopOf="@+id/btnPost"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
            />

            <Button
                android:id="@+id/btnPost"
                android:layout_width="match_parent"
                android:text="@string/str_post"
                style="@style/GlobalButtonStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_3sdp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>