<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/nav_bg"
    >

    <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
    />
    <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@android:color/white"
            android:visibility="visible"
    />
    <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <ImageView
            android:id="@+id/imgShare"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:visibility="invisible"
            android:src="@drawable/ic_share"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@android:color/white"
    />
    <ImageView
            android:id="@+id/imgCoupon"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_6sdp"
            android:src="@mipmap/coupon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
    />
    <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"
            android:src="@mipmap/search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"
            android:src="@mipmap/log_out"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:visibility="invisible"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/global_bg"
            android:visibility="gone"
    >
        <View android:id="@+id/viewFake"
                android:layout_width="@dimen/_50sdp" android:layout_height="match_parent"
              app:layout_constraintStart_toStartOf="parent"

              />
        <ImageView
                android:id="@+id/imgSearchFake"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_22sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@mipmap/search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="visible"
        />
        <ImageView
                android:id="@+id/imgSearchClose"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="visible"
        />
        <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/OnboardingEditTextStyle"
                android:ems="10"
                android:hint=""
                android:imeOptions="actionSearch"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgSearchFake"
                app:layout_constraintEnd_toStartOf="@+id/imgSearchClose"/>

        <View android:layout_width="0dp"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="@+id/imgSearchFake"
              app:layout_constraintEnd_toEndOf="@+id/imgSearchClose"
              android:background="@android:color/white"
              app:layout_constraintTop_toBottomOf="@+id/imgSearchClose"
              />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
