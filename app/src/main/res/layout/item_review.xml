<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable
            name="position"
            type="java.lang.Integer"/>
        <variable name="viewModel"
                  type="com.haze420.android.ui.main.orders.ReviewsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_bg"
        android:minHeight="@dimen/_30sdp">
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_12sdp"
        />
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.getReviewerNameAt(position)}"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            android:layout_marginStart="@dimen/_8sdp"
        />
        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/CustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="@{viewModel.getRateAt(position)}"
            android:stepSize="0.01"
            android:isIndicator="true"
            app:layout_constraintTop_toBottomOf="@id/txtName"
            app:layout_constraintStart_toStartOf="@id/txtName"
        />

        <TextView
            android:id="@+id/txtCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.getCreatedAt(position)}"
            android:textColor="@color/product_category_color"
            android:textSize="@dimen/_8ssp"
            android:fontFamily="@font/avenir_book"
            app:layout_constraintTop_toTopOf="@id/txtName"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
        />

        <TextView
            android:id="@+id/txtReviewContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/review_contentbg"
            android:text="@{viewModel.getReviewAt(position)}"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_oblique"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="@id/txtName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_25sdp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/txtReviewContent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>