<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable
            name="position"
            type="java.lang.Integer"/>
        <variable name="viewModel"
                  type="com.haze420.android.ui.main.basket.BasketViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_100sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/referral_color"
            app:layout_constraintTop_toTopOf="parent"
        >
            <TextView
                android:id="@+id/txtProductLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:background="@color/basket_list_bg"
                android:gravity="center_vertical"
                android:text="@string/str_product"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                android:id="@+id/txtCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/12/2018"
                android:textColor="@color/product_category_color"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/avenir_book"
                app:layout_constraintTop_toTopOf="@+id/txtProductLabel"
                app:layout_constraintBottom_toBottomOf="@+id/txtProductLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"
            />

            <ImageView
                android:id="@+id/imgProductImage"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_54sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtProductLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:scaleType="centerCrop"
                app:imageFromUrl="@{viewModel.getImageURLAt(position)}"
            />

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweet Tooth"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toBottomOf="@+id/txtProductLabel"
                app:layout_constraintStart_toEndOf="@+id/imgProductImage"
                android:layout_marginStart="@dimen/_14sdp"
            />

            <TextView
                android:id="@+id/txtQuantityExplained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 x 28 grams"
                android:textColor="@color/red"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toBottomOf="@+id/txtProductName"
                app:layout_constraintStart_toStartOf="@+id/txtProductName"
            />

            <TextView
                android:id="@+id/txtQuantityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_quantity"
                android:textColor="@color/basket_quantity"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toBottomOf="@+id/txtProductLabel"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="@+id/txtCreatedAt"
            />

            <ImageView
                android:id="@+id/imgPlus"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/plus"
                android:onClick="@{()->viewModel.onClickPlusAt(position)}"
                app:layout_constraintTop_toBottomOf="@+id/txtQuantityLabel"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="@+id/txtCreatedAt"
            />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:textColor="@color/red"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/avenir_book"
                app:layout_constraintTop_toTopOf="@+id/imgPlus"
                app:layout_constraintEnd_toStartOf="@id/imgPlus"
                app:layout_constraintBottom_toBottomOf="@+id/imgPlus"
            />

            <ImageView
                android:id="@+id/imgMinus"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/minus"
                android:onClick="@{()->viewModel.onClickMinusAt(position)}"
                app:layout_constraintTop_toTopOf="@+id/imgPlus"
                app:layout_constraintBottom_toBottomOf="@+id/imgPlus"
                app:layout_constraintEnd_toStartOf="@+id/txtQuantity"
            />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/imgProductImage"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/list_indicate_color"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
            />

            <TextView
                android:id="@+id/txtPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_price"
                android:textColor="@color/basket_quantity"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_12sdp"

            />

            <TextView
                android:id="@+id/txtPriceExplained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$58 x 3"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toTopOf="@+id/txtPriceLabel"
                app:layout_constraintBottom_toBottomOf="@+id/txtPriceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"
            />

            <TextView
                android:id="@+id/txtTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_total"
                android:textColor="@color/white"
                android:textSize="@dimen/_17ssp"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintTop_toBottomOf="@+id/txtPriceLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_12sdp"
            />

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$174.00"
                android:textColor="@color/red"
                android:textSize="@dimen/_17ssp"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintTop_toBottomOf="@+id/txtPriceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"
            />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/txtTotalLabel"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/grey"
            />

            <View
                android:id="@+id/vert1"
                android:layout_width="1dp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                android:background="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDelete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{()->viewModel.onClickDeleteAt(position)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/vert1"
                app:layout_constraintTop_toTopOf="@+id/vert1"
                app:layout_constraintBottom_toBottomOf="@+id/vert1"
            >
                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@mipmap/trash"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toStartOf="@+id/txtDelete"
                />
                <TextView
                    android:id="@+id/txtDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_delete"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/avenir_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgDelete"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutShare"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{()->viewModel.onClickShareAt(position)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/vert1"
                app:layout_constraintTop_toTopOf="@+id/vert1"
                app:layout_constraintBottom_toBottomOf="@+id/vert1"
            >
                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/share"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toStartOf="@+id/txtShare"
                />
                <TextView
                    android:id="@+id/txtShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_share"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/avenir_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgShare"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/vert1"
                android:background="@color/grey"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/mainLayout"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>